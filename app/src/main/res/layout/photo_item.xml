<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/photo_item_margin_top"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/photo_item_header_height"
        android:padding="@dimen/photo_item_header_padding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photo_item_header_image_avatar"
            android:layout_width="@dimen/photo_item_header_height"
            android:layout_height="@dimen/photo_item_header_height"
            android:src="@drawable/ic_bar_me"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/photo_item_header_image_love"
            android:layout_toRightOf="@+id/photo_item_header_image_avatar"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/photo_item_header_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="@string/user"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/photo_item_header_item_padding"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/photo_item_header_text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/time" />

                <TextView
                    android:id="@+id/photo_item_header_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/photo_item_header_view_margin"
                    android:layout_toLeftOf="@+id/photo_item_header_views"
                    android:text="@string/init_count" />

                <TextView
                    android:id="@+id/photo_item_header_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    android:text="@string/views" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/photo_item_header_image_love"
            android:layout_width="@dimen/photo_item_header_height"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_header_love" />

    </RelativeLayout>

    <TextView
        android:id="@+id/photo_item_body_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/photo_item_body_title_padding"
        android:text="@string/status" />


    <ImageView
        android:id="@+id/photo_item_body_image_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_body_load" />

    <LinearLayout
        android:id="@+id/layout_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photo_item_layout_action_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="@dimen/photo_item_footer_padding">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="28"
            android:gravity="center"
            android:orientation="horizontal">

            <com.facebook.share.widget.LikeView
                android:id="@+id/fb_like_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="28"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_item_footer_image_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/photo_item_layout_action_icon_padding"
                android:scaleType="centerInside"
                android:src="@drawable/ic_footer_comment" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="28"
            android:gravity="center"
            android:orientation="horizontal">

            <com.facebook.share.widget.ShareButton
                android:id="@+id/fb_share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_item_footer_image_download"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/photo_item_layout_action_icon_padding"
                android:scaleType="centerInside"
                android:src="@drawable/ic_footer_download" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>