<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/photo_item_margin_top"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/photo_item_image_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_demo" />

        <TextView
            android:id="@+id/photo_item_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/photo_item_text_title_margin"
            android:shadowColor="@android:color/darker_gray"
            android:shadowDx="-2"
            android:shadowDy="-1"
            android:shadowRadius="1"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/photo_item_text_title_size" />

        <ImageView
            android:id="@+id/photo_item_image_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/photo_item_image_love_padding"
            android:src="@drawable/ic_photo_love" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/photo_item_image_view_margin"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/photo_item_image_view_height"
                android:src="@drawable/ic_photo_view" />

            <TextView
                android:id="@+id/photo_item_text_view_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@android:color/white"
                android:shadowDx="-1"
                android:shadowDy="-1"
                android:shadowRadius="1"
                android:text="@integer/init_view" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photo_item_layout_action_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="33"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_item_image_like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/photo_item_layout_action_icon_padding"
                android:paddingTop="@dimen/photo_item_layout_action_icon_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_post_like" />

            <TextView
                android:id="@+id/photo_item_text_like_total"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/init_view" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="33"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_item_image_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/photo_item_layout_action_icon_padding"
                android:paddingTop="@dimen/photo_item_layout_action_icon_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_post_comment" />

            <TextView
                android:id="@+id/photo_item_text_comment_total"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/init_view" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="33"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_item_image_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/photo_item_layout_action_icon_share_padding"
                android:paddingTop="@dimen/photo_item_layout_action_icon_share_padding"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_post_share" />

            <TextView
                android:id="@+id/photo_item_text_share_total"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/init_view" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>