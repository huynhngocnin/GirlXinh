            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_item_footer_image_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/photo_item_layout_action_icon_padding"
                android:scaleType="centerInside"
                android:src="@drawable/ic_footer_share" />

            <TextView
