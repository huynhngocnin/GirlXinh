    <LinearLayout
        android:id="@+id/layout_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/photo_item_layout_action_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="@dimen/photo_item_footer_padding">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_item_footer_image_like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/photo_item_layout_action_icon_padding"
                android:scaleType="centerInside"
                android:src="@drawable/ic_footer_like" />

            <TextView
                android:id="@+id/photo_item_footer_text_like_total"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/init_count" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_item_footer_image_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/photo_item_layout_action_icon_padding"
                android:scaleType="centerInside"
                android:src="@drawable/ic_footer_comment" />

            <TextView
                android:id="@+id/photo_item_footer_text_comment_total"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/init_count" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
