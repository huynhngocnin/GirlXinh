<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/photo_item_margin_top"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/photo_item_header_height"
        android:padding="@dimen/photo_item_header_padding">

        <ImageView
            android:id="@+id/photo_item_header_image_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bar_me" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/photo_item_header_image_love"
            android:layout_toRightOf="@+id/photo_item_header_image_avatar"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="@string/user"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/photo_item_header_item_padding"
                    android:text="@string/time" />

                <TextView
                    android:id="@+id/photo_item_header_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/photo_item_header_views"
                    android:padding="@dimen/photo_item_header_item_padding"
                    android:text="@string/init_count" />

                <TextView
                    android:id="@+id/photo_item_header_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/photo_item_header_item_padding"
                    android:text="@string/views" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/photo_item_header_image_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_header_love" />

    </RelativeLayout>

    <TextView
        android:id="@+id/photo_item_body_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/photo_item_body_title_padding"
        android:text="@string/status" />

